extends layout

block content

  body

  | {{# if products }}
.row
  .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
    ul.list-group
      | {{# each products }}
      li.list-group-item
        span.badge {{ this.qty }}
        strong {{ this.item.title }}
        span.label.label-success ${{ this.price }}
        .btn-group
          button.btn.btn-primary.btn-xs.dropdown-toggle(type='button', data-toggle='dropdown')
            | Action 
            span.caret
          ul.dropdown-menu
            li
              a(href='/reduce/{{this.item._id}}') Reduce by 1
            li
              a(href='/remove/{{this.item._id}}') Remove All
      |                 {{/each}}
.row
  .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
    strong Total: {{ totalPrice }}
hr
.row
  .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
    a.btn.btn-success(href='/checkout', type='button') Checkout
| {{ else }}
.row
  .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
    h2 No Items in Cart
| {{/if}}


    include footer.pug 